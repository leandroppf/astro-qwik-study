---
import Layout from '@/layouts/Layout.astro';
import QCard from '@/components/QCard';

interface CardContent {
	href: string;
	title: string;
	body: string;
}

const cards: CardContent[] = [
	{
		body: 'Astro builds fast content sites, powerful web applications, dynamic server APIs, and everything in-between.',
		href: 'https://astro.build/',
		title: 'Astro'
	},
	{
		body: 'Qwik is a new kind of web framework that can deliver instant loading web applications at any size or complexity.',
		href: 'https://qwik.builder.io/',
		title: 'Qwik'
	},
	{
		body: 'PWA integrations for Vite and the ecosystem Zero-config and framework-agnostic PWA Plugin for Vite',
		href: 'https://vite-pwa-org.netlify.app/',
		title: 'PWA Vite Plugin'
	},
	{
		body: 'Component class names to Tailwind CSS so you can make beautiful websites faster than ever.',
		href: 'https://daisyui.com/',
		title: 'DaisyUI'
	},
	{
		body: 'Project github repository',
		href: 'https://github.com/leandroppf/astro-qwik-study',
		title: 'atro-qwik-study'
	},
	{
		body: 'Step by step project creation',
		href: 'https://gist.github.com/leandroppf/853f2d1c93005663a2d54707c5af3ed9',
		title: 'Gist'
	}
]

