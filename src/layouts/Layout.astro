---
import { pwaInfo } from 'virtual:pwa-info'
import { ViewTransitions } from "astro:transitions";
import ReloadPrompt from '@/components/ReloadPrompt.astro'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="font-sans h-screen">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<meta name="description" content="Edsoma Reading App for Web" />
		<meta name="generator" content={Astro.generator} /> 
		<meta name="theme-color" content="#ffffff">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" href="/favicon.svg" sizes="180x180">
		<link rel="mask-icon" href="/favicon.svg" color="#FFFFFF">
		<title>{title}</title>
		<ViewTransitions />
		<script src="/src/pwa.ts"></script>
    { pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} /> }
	</head>
	<body class="bg-gradient-to-t from-gray-950 to-gray-700 min-h-screen">
		<slot />
		<ReloadPrompt />
	</body>
</html>
